{% extends 'PodzamenuMainBundle::layout.html.twig' %}
{% block body %}

{% if error %}
<div>{{ error.message }} </div>
{% endif %}

<br/><br/>

<div id="login_content" style="width: 500px; margin: auto;">
    <div id="login_content_main">
        <div class="general_option_hide">
        </div>
        <div id="login_form">
            <form action="{{ path('login_check') }}" method="post">
                <table class="login_table">
                    <tr>
                        <th colspan="2" style="padding-bottom:20px; font-size: 20pt;">Вход в систему</th>
                    </tr>
                    <tr>
                        <td style="text-align:right;">Логин:&nbsp;&nbsp;</td>
                        <td><input type="text" id="username" name="_username" value="{{ last_username }}" class="login_data"/>
                        </td>
                    </tr>
                    <tr>
                        <td style="text-align:right" >&nbsp;&nbsp;</td>
                    </tr>
                    <tr>
                        <td style="text-align:right" >Пароль:&nbsp;&nbsp;</td>
                        <td><input type="password" id="password" name="_password" class="login_data"/></td>
                    </tr>
                    <tr>
                        <td style="text-align:right" >&nbsp;&nbsp;</td>
                    </tr>
                    <tr>
                        <td colspan="2" style="text-align:right">
                            <input type="submit" value="Войти" class="login_button" name="login"/></td>
                    </tr>
                </table>
            </form>
        </div>
    </div>
</div> 
{% endblock %}